<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:padding="@dimen/size_ten"
    android:id="@+id/qb_form_layout2"
    tools:context="com.example.sti_agent.operation_fragment.Marine.MarineFragment2">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_six"
        >

        <com.shuhart.stepview.StepView
            android:id="@+id/step_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:sv_selectedCircleColor="@color/colorAccent"
            app:sv_selectedTextColor="@color/colorAccent"
            app:sv_stepLineWidth="1dp"
            app:sv_stepPadding="4dp"
            app:sv_nextTextColor="@color/colorAccent"
            app:sv_nextStepLineColor="@color/colorAccent"
            app:sv_doneCircleColor="@color/colorAccent"
            app:sv_doneStepLineColor="@color/colorAccent"
            app:sv_doneCircleRadius="12dp"
            app:sv_selectedCircleRadius="12dp"
            app:sv_selectedStepNumberColor="@color/colorPrimary"
            app:sv_stepViewStyle="@style/StepView"
            app:sv_doneStepMarkColor="@color/colorPrimary"
            app:sv_stepNumberTextSize="12sp"
            app:sv_animationType="Line"
            app:sv_stepsNumber="4"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/step_view"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cargo Information"
                android:layout_margin="2dp"
                android:textColor="@color/colorPrimary"

                />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutProfInvoice_m2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        >

                        <EditText
                            android:id="@+id/prof_invoice_txt_m2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_three"
                            android:background="@drawable/rounded_bg"
                            android:hint="Proforma Invoice Number"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="text"
                            android:padding="@dimen/size_ten"
                            tools:targetApi="o"
                            />
                    </com.google.android.material.textfield.TextInputLayout>




                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutProfInvoiceDate_m2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        >

                        <EditText
                            android:id="@+id/prof_invoice_date_txt_m2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_three"
                            android:background="@drawable/rounded_bg"
                            android:hint="Date of Proforma Invoice"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="date"
                            android:padding="@dimen/size_ten"
                            tools:targetApi="o"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutDescGoods_m2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        >

                        <EditText
                            android:id="@+id/desc_goods_m2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_three"
                            android:background="@drawable/rounded_bg"
                            android:hint="Description of Goods"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="text"
                            android:padding="@dimen/size_ten"
                            tools:targetApi="o"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutInterest_m2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        >

                        <EditText
                            android:id="@+id/interest_txt_m2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_three"
                            android:background="@drawable/rounded_bg"
                            android:hint="Interest"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="text"
                            android:padding="@dimen/size_ten"
                            tools:targetApi="o"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutQuantity_m2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        >

                        <EditText
                            android:id="@+id/quantity_txt_m2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_three"
                            android:background="@drawable/rounded_bg"
                            android:hint="Quantity"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="text"
                            android:padding="@dimen/size_ten"
                            tools:targetApi="o"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Spinner
                        android:id="@+id/currency_spinner_m2"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/size_three"
                        android:visibility="visible"
                        />


                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutTotalAmt"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        >

                        <EditText
                            android:id="@+id/total_amt_txt_m2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_three"
                            android:background="@drawable/rounded_bg"
                            android:hint="Total Amount/Value of Proforma Invoice"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="text"
                            android:padding="@dimen/size_ten"
                            tools:targetApi="o"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutConversionRate"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        >

                        <EditText
                            android:id="@+id/coversion_rate_txt_m2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_three"
                            android:background="@drawable/rounded_bg"
                            android:hint="Naira Conversion Rate"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="text"
                            android:padding="@dimen/size_ten"
                            tools:targetApi="o"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutPortOfLoad"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        >

                        <EditText
                            android:id="@+id/portofload_txt_m2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_three"
                            android:background="@drawable/rounded_bg"
                            android:hint="Port of Loading"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="text"
                            android:padding="@dimen/size_ten"
                            tools:targetApi="o"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutPortDischarge_m2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        >

                        <EditText
                            android:id="@+id/portdischarge_txt_m2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_three"
                            android:background="@drawable/rounded_bg"
                            android:hint="Port of Discharge"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="text"
                            android:padding="@dimen/size_ten"
                            tools:targetApi="o"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Spinner
                        android:id="@+id/modeOfConvey_spinner_m2"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/size_three"
                        android:visibility="visible"
                        />


                    <Button
                        android:id="@+id/upload_prof_doc_btn_m2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_bg"
                        android:drawableEnd="@drawable/ic_camera_alt_black_24dp"
                        android:paddingEnd="@dimen/size_ten"
                        android:text="Upload Passport"
                        android:layout_marginTop="@dimen/size_ten"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginBottom="@dimen/size_ten"
                        android:visibility="visible"
                        />


                   <LinearLayout
                       android:id="@+id/btn_layout2_m2"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:layout_margin="8dp"
                       android:weightSum="2"
                       android:orientation="horizontal">

                       <Button
                           android:id="@+id/v_back_btn2_m2"
                           android:layout_width="0dp"
                           android:layout_weight="1"
                           android:layout_height="wrap_content"
                           android:background="@drawable/rounded_bg_color_btn"
                           android:drawableStart="@drawable/ic_chevron_left_black_24dp"
                           android:padding="@dimen/size_eight"
                           android:text="Back"
                           android:layout_gravity="start"
                           android:layout_marginTop="@dimen/size_ten"
                           android:textColor="@color/colorPrimary"
                           android:layout_marginBottom="@dimen/size_ten"
                           android:visibility="visible"
                           />
                       <View
                           android:layout_width="8dp"
                           android:layout_height="wrap_content"

                           />

                       <Button
                           android:id="@+id/v_next_btn2_m2"
                           android:layout_width="0dp"
                           android:layout_height="wrap_content"
                           android:layout_weight="1"
                           android:background="@drawable/rounded_right_bg_color_btn"
                           android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
                           android:padding="@dimen/size_eight"
                           android:text="Pricing"
                           android:layout_gravity="end"
                           android:layout_marginTop="@dimen/size_ten"
                           android:textColor="@color/colorPrimary"
                           android:layout_marginBottom="@dimen/size_ten"
                           android:visibility="visible"
                           />
                   </LinearLayout>


                    <com.wang.avi.AVLoadingIndicatorView
                        android:id="@+id/progressbar2_m2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        app:indicatorColor="@color/colorAccent"
                        app:indicatorName="BallTrianglePathIndicator"
                        tools:ignore="RtlHardcoded"/>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </RelativeLayout>
</FrameLayout>
