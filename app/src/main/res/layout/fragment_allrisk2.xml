<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:padding="@dimen/size_ten"
    android:id="@+id/qb_form_layout2"
    tools:context="com.example.sti_agent.operation_fragment.AllRisk.AllriskFragment2">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_six"
        >

        <com.shuhart.stepview.StepView
            android:id="@+id/step_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:sv_selectedCircleColor="@color/colorAccent"
            app:sv_selectedTextColor="@color/colorAccent"
            app:sv_stepLineWidth="1dp"
            app:sv_stepPadding="4dp"
            app:sv_nextTextColor="@color/colorAccent"
            app:sv_nextStepLineColor="@color/colorAccent"
            app:sv_doneCircleColor="@color/colorAccent"
            app:sv_doneStepLineColor="@color/colorAccent"
            app:sv_doneCircleRadius="12dp"
            app:sv_selectedCircleRadius="12dp"
            app:sv_selectedStepNumberColor="@color/colorPrimary"
            app:sv_stepViewStyle="@style/StepView"
            app:sv_doneStepMarkColor="@color/colorPrimary"
            app:sv_stepNumberTextSize="12sp"
            app:sv_animationType="Line"
            app:sv_stepsNumber="4"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/step_view"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Item Information"
                android:layout_margin="2dp"
                android:textColor="@color/colorPrimary"

                />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <Spinner
                    android:id="@+id/item_type_spinner_a2"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="@dimen/size_three"
                    android:background="@drawable/spinner_bg"
                    android:visibility="visible"
                    />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutItemDescriptn_a2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        >

                        <EditText
                            android:id="@+id/item_desc_a2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_three"
                            android:background="@drawable/rounded_bg"
                            android:hint="Describe the item"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="text"
                            android:padding="@dimen/size_ten"
                            tools:targetApi="o"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutStartDate_a2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        >

                        <EditText
                            android:id="@+id/start_date_a2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_three"
                            android:background="@drawable/rounded_bg"
                            android:hint="Start Date"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="date"
                            android:padding="@dimen/size_ten"
                            tools:targetApi="o"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutSerialNo_a2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        >

                        <EditText
                            android:id="@+id/serial_num_a2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_three"
                            android:background="@drawable/rounded_bg"
                            android:hint="Serial Number"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="text"
                            android:padding="@dimen/size_ten"
                            tools:targetApi="o"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutItemValue_a2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="visible"
                        >

                        <EditText
                            android:id="@+id/item_value_a2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_three"
                            android:background="@drawable/rounded_bg"
                            android:hint="Item Value"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="text"
                            android:padding="@dimen/size_ten"
                            tools:targetApi="o"
                            />
                    </com.google.android.material.textfield.TextInputLayout>


                    <LinearLayout
                        android:id="@+id/btn_layout2_a2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:weightSum="2"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/v_back_btn2_a2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_bg_color_btn"
                            android:drawableStart="@drawable/ic_chevron_left_black_24dp"
                            android:padding="@dimen/size_ten"
                            android:layout_weight="1"
                            android:text="Back"
                            android:layout_gravity="start"
                            android:layout_marginTop="@dimen/size_ten"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginBottom="@dimen/size_ten"
                            android:visibility="visible"
                            />
                        <View
                            android:layout_width="8dp"
                            android:layout_height="wrap_content"

                            />


                        <Button
                            android:id="@+id/v_next_btn2_a2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/rounded_right_bg_color_btn"
                            android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
                            android:padding="@dimen/size_ten"
                            android:text="Pricing"
                            android:layout_weight="1"
                            android:layout_gravity="end"
                            android:layout_marginTop="@dimen/size_ten"
                            android:textColor="@color/colorPrimary"
                            android:layout_marginBottom="@dimen/size_ten"
                            android:visibility="visible"
                            />
                    </LinearLayout>



                    <com.wang.avi.AVLoadingIndicatorView
                        android:id="@+id/progressbar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        app:indicatorColor="@color/colorAccent"
                        app:indicatorName="BallTrianglePathIndicator"
                        tools:ignore="RtlHardcoded"/>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </RelativeLayout>
</FrameLayout>
