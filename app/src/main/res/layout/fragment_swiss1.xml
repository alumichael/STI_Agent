<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f1f1f1"
    android:padding="@dimen/size_ten"
    android:id="@+id/qb_form_layout1"
    tools:context="com.example.sti_agent.operation_fragment.Swiss.SwissFragment1">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/size_six"
        >

        <com.shuhart.stepview.StepView
            android:id="@+id/step_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            app:sv_selectedCircleColor="@color/colorAccent"
            app:sv_selectedTextColor="@color/colorAccent"
            app:sv_stepLineWidth="1dp"
            app:sv_stepPadding="4dp"
            app:sv_nextTextColor="@color/colorAccent"
            app:sv_nextStepLineColor="@color/colorAccent"
            app:sv_doneCircleColor="@color/colorAccent"
            app:sv_doneStepLineColor="@color/colorAccent"
            app:sv_doneCircleRadius="12dp"
            app:sv_selectedCircleRadius="12dp"
            app:sv_selectedStepNumberColor="@color/colorPrimary"
            app:sv_stepViewStyle="@style/StepView"
            app:sv_doneStepMarkColor="@color/colorPrimary"
            app:sv_stepNumberTextSize="12sp"
            app:sv_animationType="Line"
            app:sv_stepsNumber="4"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/step_view"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Personal Information"
                android:layout_margin="2dp"
                android:textColor="@color/colorPrimary"

                />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <Spinner
                        android:id="@+id/prefix_spinner_s"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/size_three"


                        />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutFirstName_s1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        >

                        <EditText
                            android:id="@+id/firstname_editxt_s1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_three"
                            android:background="@drawable/rounded_bg"
                            android:hint="First Name"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="text"
                            android:padding="@dimen/size_ten"
                            tools:targetApi="o"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutLastName_s1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        >

                        <EditText
                            android:id="@+id/lastname_editxt_s1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_three"
                            android:background="@drawable/rounded_bg"
                            android:hint="Last Name"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="text"
                            android:padding="@dimen/size_ten"
                            tools:targetApi="o"
                            />
                    </com.google.android.material.textfield.TextInputLayout>


                    <Spinner
                        android:id="@+id/gender_spinner_s1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/size_three"

                        />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutResAddr_s1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        >

                        <EditText
                            android:id="@+id/residents_addr_editxt_s1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_three"
                            android:background="@drawable/rounded_bg"
                            android:hint="Residentail Address"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="text"
                            android:padding="@dimen/size_ten"
                            tools:targetApi="o"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Spinner
                        android:id="@+id/marital_spinner_s1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/size_three"
                        />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutPhone_s1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/phone_no_editxt_s1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_three"
                            android:background="@drawable/rounded_bg"
                            android:hint="Phone Number"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="text"
                            android:padding="@dimen/size_ten"
                            tools:targetApi="o"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutNextKin_s1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >

                        <EditText
                            android:id="@+id/next_kin_editxt_s1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_three"
                            android:background="@drawable/rounded_bg"
                            android:hint="Next of Kin"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="text"
                            android:padding="@dimen/size_ten"
                            tools:targetApi="o"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutNextKinAddr_s1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        >

                        <EditText
                            android:id="@+id/next_kin_editxt_addr_s1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_three"
                            android:background="@drawable/rounded_bg"
                            android:hint="Next of Kin Address"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="text"
                            android:padding="@dimen/size_ten"
                            tools:targetApi="o"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutPhoneNextKin_s1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <EditText
                            android:id="@+id/phone_Nextkin_editxt_s1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_three"
                            android:background="@drawable/rounded_bg"
                            android:hint="Next of Kin Phone Number"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="number"
                            android:padding="@dimen/size_ten"
                            tools:targetApi="o"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutDateofBirth_s1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        >

                        <EditText
                            android:id="@+id/dob_editxt_s"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_three"
                            android:background="@drawable/rounded_bg"
                            android:hint="Date of Birth"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="text"
                            android:padding="@dimen/size_ten"
                            tools:targetApi="o"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/inputLayoutDisability_s1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        >

                        <EditText
                            android:id="@+id/disabilty_editxt_s1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/size_three"
                            android:background="@drawable/rounded_bg"
                            android:hint="Any form of Disability(Enter No! if No)"
                            android:importantForAutofill="noExcludeDescendants"
                            android:inputType="text"
                            android:padding="@dimen/size_ten"
                            tools:targetApi="o"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <Spinner
                        android:id="@+id/benefit_spinner_s1"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="@dimen/size_three"
                        />

                    <Button
                        android:id="@+id/upload_passport_btn_s1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_bg"
                        android:drawableEnd="@drawable/ic_camera_alt_black_24dp"
                        android:padding="@dimen/size_ten"
                        android:text="Upload Passport"
                        android:layout_marginTop="@dimen/size_ten"
                        android:textColor="@android:color/darker_gray"
                        android:layout_marginBottom="@dimen/size_ten"

                        />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimary"
                        android:text="I have review and agreed to the disclosure and the privacy policy"
                        android:textStyle="italic"
                        />

                    <Button
                        android:id="@+id/next_btn1_s1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_bg_color_btn"
                        android:drawableEnd="@drawable/ic_chevron_right_black_24dp"
                        android:padding="@dimen/size_ten"
                        android:text="Next"
                        android:layout_marginTop="@dimen/size_ten"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginBottom="@dimen/size_ten"

                         />

                    <com.wang.avi.AVLoadingIndicatorView
                        android:id="@+id/progressbar1_s1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:clickable="false"
                        android:layout_gravity="center"
                        app:indicatorColor="@color/colorAccent"
                        app:indicatorName="BallTrianglePathIndicator"
                        tools:ignore="RtlHardcoded"/>

                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </RelativeLayout>
</FrameLayout>
